{
    email admin@{$DOMAIN}
}

{$DOMAIN} {
    encode gzip

    @webhook path /whatsapp/webhook
    reverse_proxy @webhook app:3000 {
        transport http {
            read_buffer 8192
            response_header_timeout 120s
        }
    }

    @admin path /admin/* /health
    reverse_proxy @admin app:3000 {
        transport http {
            read_buffer 8192
            response_header_timeout 120s
        }
    }
}
